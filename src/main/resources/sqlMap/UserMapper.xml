<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bean.mybatisInterface.UserUpdateInterface">
      <update id="updateUserImg" parameterType="bean.bean.UserDao">
          update User
          <trim prefix="set" suffixOverrides=",">
              <if test="headImg!=null">
                  head_img = #{headImg}
              </if>
              <if test="nickName!=null">
                  nick_name = #{nickName}
              </if>
              <if test="passwd!=null">
                  passwd = #{passwd}
              </if>
              <if test="phone!=null">
                  phone = #{phone}
              </if>
          </trim>
          <where>
              id=#{id}
          </where>
      </update>
</mapper>